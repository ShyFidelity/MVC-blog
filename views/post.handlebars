 <div class="col-md-5">
    <h2>

      <a href="/posts/{{id}}">{{name}}</a>
    </h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
    </p>
  
  </div>

  <div id="comment" class="col-md-7">
    <h2>COMMENTS</h2>
    <p>
      {{#each comments as |comment|}}
      {{comment.content}}
      {{/each}}
    </p>
  
  </div>