 <div class="col-md-5">
    <h2>

      <a href="/posts/{{id}}">{{name}}</a>
    </h2>
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{description}}
    </p>
  
  </div>

  <form>
  <div id="commentDiv" class="col-md-7">
    <h2>comment</h2>
  <input id= "comment" class="input" type="text" placeholder="Text input">
    <button type="submit">submit comment</button>
  
<h2>Comments</h2>
    <p>
      
      {{#each comments as |comment|}}
      {{comment.content}}
      {{/each}}
    </p>
  
</form>

  </div>